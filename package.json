{
  "name": "exdevs-ir",
  "version": "1.5.0",
  "private": true,
  "scripts": {
    "start": "tsc && gulp build && pm2 start dist/server.js --name exdevs-ir",
    "restart": "tsc && gulp build && pm2 restart exdevs-ir",
    "stop": "pm2 stop exdevs-ir",
    "dev": "tsc-watch --noClear --onFirstSuccess gulp",
    "monit": "pm2 monit",
    "db:migrate": "knex migrate:latest",
    "db:seeds": "knex seed:run",
    "db:seed": "npm run db:seeds",
    "db:rollback": "knex migrate:rollback --all",
    "key:generate": "ts-node app/commands/gen-secret.ts",
    "test": "tsc test/*.ts --outDir dist/test && tsc && cross-env NODE_ENV=testing mocha --timeout 10000 --exit --bail",
    "lint": "eslint --fix gulpfile.js bootstrap/app.js counter.js resources/js/script.js"
  },
  "dependencies": {
    "bcrypt": "^3.0.8",
    "body-parser": "^1.19.0",
    "connect-redis": "^5.2.0",
    "debug": "~2.6.9",
    "dotenv": "^8.6.0",
    "express": "~4.16.0",
    "express-session": "^1.17.2",
    "helmet": "^4.6.0",
    "http-errors": "~1.6.2",
    "knex": "^0.20.15",
    "morgan": "~1.9.0",
    "multer": "^1.4.3",
    "mysql": "^2.18.1",
    "pm2": "^3.5.2",
    "pug": "^2.0.4",
    "redis": "^3.1.2",
    "request": "^2.88.2",
    "serve-favicon": "^2.5.0",
    "useragent": "^2.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.2.21",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/http-errors": "^1.8.1",
    "@types/mocha": "^8.2.3",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^15.14.7",
    "@types/redis": "^2.8.31",
    "@types/serve-favicon": "^2.5.3",
    "autoprefixer": "^9.8.6",
    "browser-sync": "^2.27.5",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^6.1.0",
    "gulp-concat": "^2.6.1",
    "gulp-deporder": "^1.2.0",
    "gulp-imagemin": "^6.2.0",
    "gulp-newer": "^1.4.0",
    "gulp-nodemon": "^2.5.0",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.1.1",
    "gulp-sourcemaps": "^2.6.5",
    "jsdom": "^16.7.0",
    "mocha": "^8.4.0",
    "node-sass": "^4.14.1",
    "prettier": "2.0.2",
    "readable-stream": "^3.6.0",
    "supertest": "^6.1.5",
    "ts-node": "^10.2.0",
    "tsc-watch": "^4.4.0",
    "typescript": "^4.3.5"
  },
  "description": "Exceptional Developers Website",
  "main": "server.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/amirhoseinsalimi/exdevs-ir.git"
  },
  "keywords": [
    "website",
    "nodejs",
    "expressjs",
    "express-boilerplate"
  ],
  "author": "Amir Hosein Salimi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amirhoseinsalimi/exdevs-ir/issues"
  },
  "homepage": "https://exdevs.ir"
}
