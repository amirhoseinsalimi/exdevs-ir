{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jquery": true,
    "mocha": true
  },
  "extends": "airbnb",
  "globals": {
    "particlesJS" : true
  },
  "parserOptions": {
    "ecmaVersion": 8
  },
  "rules": {
    "no-console": "off",
    "no-shadow": "off",
    "no-unused-vars": "warn",
    "no-use-before-define": "off",
    "no-plusplus": "off",
    "prefer-destructuring": "off",
    "no-param-reassign": "off",
    "consistent-return": "off",
    "no-underscore-dangle": "off",
    "implicit-arrow-linebreak": "off",
    "arrow-parens": "off",
    "camelcase": "off"
  }
}
