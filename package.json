    "lint-staged": "^13.1.0",
    "mocha": "^10.1.0",
    "prettier": "2.0.2",
    "readable-stream": "^3.6.0",
    "sass": "^1.55.0",
    "supertest": "^6.3.0",
    "ts-node": "10.7.0",
    "tsc-watch": "^5.0.3",
    "typescript": "4.5.2"
  },
  "description": "Exceptional Developers Website",
  "main": "server.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/amirhoseinsalimi/exdevs-ir.git"
  },
  "keywords": [
    "website",
