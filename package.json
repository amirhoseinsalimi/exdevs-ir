{
  "name": "exdevs-ir",
  "version": "1.7.0",
  "private": false,
  "scripts": {
    "start": "tsc && gulp build && pm2 start dist/server.js --name exdevs-ir",
    "restart": "tsc && gulp build && pm2 restart exdevs-ir",
    "stop": "pm2 stop exdevs-ir",
    "dev": "tsc-watch --noClear --onFirstSuccess gulp",
    "monit": "pm2 monit",
    "db:migrate": "knex migrate:latest",
    "db:seeds": "knex seed:run",
    "db:seed": "npm run db:seeds",
    "db:rollback": "knex migrate:rollback --all",
    "key:generate": "ts-node app/commands/gen-secret.ts",
    "test": "tsc test/*.ts --outDir dist/ && tsc && cross-env NODE_ENV=testing mocha --timeout 10000 --exit --bail",
    "lint": "eslint --fix gulpfile.js bootstrap/app.js counter.js resources/js/script.js",
    "prepare": "husky install",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.19.0",
    "connect-redis": "^6.1.3",
    "debug": "~2.6.9",
    "dotenv": "^16.0.3",
    "express": "~4.16.0",
    "express-session": "^1.17.2",
    "helmet": "^6.0.0",
    "http-errors": "~2.0.0",
    "knex": "^2.3.0",
    "morgan": "~1.10.0",
    "multer": "^1.4.3",
    "mysql2": "^2.3.3",
    "pm2": "^3.5.2",
    "postcss": "^8.4.17",
    "postcss-scss": "^4.0.5",
    "pug": "^3.0.2",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "serve-favicon": "^2.5.0",
    "typeorm": "0.3.11",
    "useragent": "^2.3.0",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.2.21",
    "@types/connect-redis": "^0.0.19",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/http-errors": "^1.8.1",
    "@types/jsdom": "^20.0.1",
    "@types/mocha": "^10.0.0",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.11.10",
    "@types/redis": "^2.8.31",
    "@types/serve-favicon": "^2.5.3",
    "@types/supertest": "^2.0.12",
    "autoprefixer": "^9.8.6",
    "browser-sync": "^2.27.5",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^6.1.0",
    "gulp-concat": "^2.6.1",
    "gulp-deporder": "^1.2.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-newer": "^1.4.0",
    "gulp-nodemon": "^2.5.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
