nav.navbar.navbar-light
  a.navbar-brand#navbarDropdownMenuLink.nav-link(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
    img(src='/icons/three-dots-vertical.svg' alt='Menu' width="20" height="20" title="Menu")
