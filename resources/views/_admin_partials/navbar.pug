      a.dropdown-item(class='btn-logout') Logout

script.
  document.querySelectorAll('.btn-logout')[0].addEventListener('click', async () => {
    try {
      await fetch('/admin/logout', {
        method: 'POST',
      });

      location.href = '/admin'
    } catch (e) {
      console.log(e);
    }
  });
